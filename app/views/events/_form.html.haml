.row
  .col-md-12
    .box.box-info
      .box-header.with-border
        %h3.box-title
          Add New Conference
      = form_for [current_user, @event], :html => {:class => 'form-horizontal', :multipart => true} do |f|
        - if @event.errors.any?
          #error_explanation
            %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
            %ul
              - @event.errors.full_messages.each do |msg|
                %li= msg

        .box-body
          .form-group
            = f.label :name, :class => 'col-sm-2 control-label'
            .col-sm-10
              = f.text_field :name, :class => 'form-control', :placeholder => 'Name'
          .form-group
            = f.label :description, :class => 'col-sm-2 control-label'
            .col-sm-10
              = f.text_area :description, :class => 'form-control', :placeholder => 'Description'
          .form-group
            = f.label :starts_date, :class => 'col-sm-2 control-label'
            .col-sm-10
              .input-group
                .input-group-addon
                  %i.fa.fa-calendar
                = f.text_field :starts_at, :class => 'form-control date-mask'
          .form-group
            = f.label :ends_date, :class => 'col-sm-2 control-label'
            .col-sm-10
              .input-group
                .input-group-addon
                  %i.fa.fa-calendar
                = f.text_field :ends_at, :class => 'form-control date-mask'
          .form-group
            = f.label :background_image, :class => 'col-sm-2 control-label'
            .col-sm-10
              = f.file_field :image
              %p.help-block This image appears as the identity of your event...make it count
        .box-footer
          = link_to 'Cancel', root_path, :class => 'btn btn-default'
          = f.submit 'Save', :class => 'btn btn-info pull-right'